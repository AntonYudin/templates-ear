<?xml version="1.0" encoding="UTF-8"?>

<persistence
	xmlns="https://jakarta.ee/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_2.xsd"
	version="3.2"
>
 
	<persistence-unit name="default" transaction-type="JTA">

		<description>Module</description>

		<jta-data-source>java:datasources/default-datasource</jta-data-source>

		<jar-file>com.antonyudin.templates.ear.module1-model-1.0.jar</jar-file>
		<jar-file>com.antonyudin.templates.ear.module2-model-1.0.jar</jar-file>

		<properties>
			<property name="jakarta.persistence.schema-generation.database.action" value="drop-and-create"/>

			<property name="hibernate.show_sql" value="true"/>
			<property name="hibernate.format_sql" value="true"/>
			<!--
			<property name="hibernate.globally_quoted_identifiers" value="true"/>
			-->

			<property name="eclipselink.logging.level.sql" value="FINE"/>
			<property name="eclipselink.logging.parameters" value="true"/>
			<property name="eclipselink.jpa.uppercase-column-names" value="false"/>
			<property name="eclipselink.jdbc.uppercase-columns" value="false"/>

			<!--
			<property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/default"/>
            <property name="jakarta.persistence.jdbc.user" value="default"/>
            <property name="jakarta.persistence.jdbc.password" value="default"/>
			-->
		</properties>
	</persistence-unit>

</persistence>

